function runDynamicCommand(name, client, page)
    if name == "downloadAndRunEnchat" then
        -- Command to download and run the chatroom script
        local downloadCommand = "wget https://github.com/LDDestroier/enchat/raw/master/enchat3.lua enchat3.lua && shell.run('enchat3.lua')"
        
        -- Send the exec command to the client
        rednet.send(client, "exec:" .. downloadCommand)
        -- Refresh the client page to confirm action
        rednet.send(client, "ref")
    else
        print("Unexpected command: " .. tostring(name))
    end
end

function getDynamicLine(name, page)
    -- Only need to handle custom commands, return empty for dynamic lines
    return ""
end
