-- Function to handle custom commands
function runDynamicCommand(name, client, page)
    if name == "downloadAndRunEnchat" then
        -- Command to run the script from Pastebin directly
        local pastebinCode = "z7BtzSrt"  -- Replace with the actual Pastebin code
        local command = "pastebin run " .. pastebinCode
        rednet.send(client, "exec:" .. command)
        print("Sent command to client to run Enchat program from Pastebin.")
    else
        print("Unexpected command: " .. tostring(name))
    end
end
