function runDynamicCommand(name, client, page)
    -- Check if the command starts with "custom:"
    if string.sub(name, 1, 7) == "custom:" then
        -- Extract the actual command name after "custom:"
        local actualCommand = string.sub(name, 8)

        if actualCommand == "downloadAndRunEnchat" then
            -- Construct the command to download and run the chatroom script
            local downloadCommand = "wget https://github.com/LDDestroier/enchat/raw/master/enchat3.lua enchat3.lua && shell.run('enchat3.lua')"

            -- Send the exec command to the client to execute the download and run it
            rednet.send(client, "exec:" .. downloadCommand)
            -- Refresh the client page to confirm action
            rednet.send(client, "ref")
        else
            print("Unexpected custom command: " .. tostring(actualCommand))
        end
    else
        print("Unexpected command: " .. tostring(name))
    end
end
